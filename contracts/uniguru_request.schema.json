{
  "$id": "https://example.com/uniguru-request.schema.json",
  "type": "object",
  "required": ["requestId", "userContext", "query", "context", "flags"],
  "properties": {
    "requestId": { "type": "string" },
    "userContext": {
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "role": { "type": "string" },
        "locale": { "type": "string" }
      }
    },
    "query": {
      "type": "object",
      "required": ["prompt","type"],
      "properties": {
        "prompt": { "type": "string" },
        "type": { "enum": ["explain","fetch","transform"] },
        "constraints": { "type": "array", "items": { "type": "string" } }
      }
    },
    "context": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id","type","contentHash"],
        "properties": {
          "id": { "type": "string" },
          "type": { "enum": ["document","kb","metadata"] },
          "contentHash": { "type": "string" },
          "contentSnippet": { "type": "string" }
        }
      }
    },
    "flags": {
      "type": "object",
      "required": ["interactive","mode"],
      "properties": {
        "interactive": { "type": "boolean" },
        "mode": { "enum": ["strict","lenient"] }
      }
    }
  }
}
