{
  "$id": "https://example.com/uniguru-response.schema.json",
  "type": "object",
  "required": ["requestId","status","result","policy"],
  "properties": {
    "requestId": { "type": "string" },
    "status": { "enum": ["ok","partial","rejected","error"] },
    "result": {
      "type": "object",
      "required": ["kind","value"],
      "properties": {
        "kind": { "enum": ["text","structured"] },
        "value": { }
      }
    },
    "sources": {
      "type": "array",
      "items": { "type": "object" }
    },
    "policy": {
      "type": "object",
      "required": ["verdict"],
      "properties": {
        "verdict": { "enum": ["allow","rewrite","block"] },
        "reason": { "type": "string" }
      }
    },
    "determinismSeed": { "type": "string" }
  }
}
